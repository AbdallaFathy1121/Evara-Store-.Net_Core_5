
@model TbSubCategory


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">SubCategory Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Add & Edit</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-controller="SubCategory" asp-action="Save" method="post" role="form">
                        <div class="card-body">

                            @if (Model == null)
                            {
                                <input type="hidden" value="0" asp-for="SubCategoryId" />
                            }
                            else
                            {
                                <input type="hidden" asp-for="SubCategoryId" />
                            }

                            @*SubCAtegory Name*@
                            <div class="form-group">
                                <label for="exampleInputEmail1">SubCategory Name</label>
                                <input asp-for="SubCategoryName" type="text" class="form-control" id="exampleInputEmail1" required />
                            </div>

                            @*Select Category*@
                            <div class="form-group">
                                <label for="select">Category</label>
                                <select id="select" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId","CategoryName"))">
                                </select>
                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </div>

                            <input type="datetime" asp-for="CreationDate" hidden />

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn-lg btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

