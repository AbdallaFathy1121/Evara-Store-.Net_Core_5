
@model TbCategory


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Form</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Category Form</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Add & Edit</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-controller="Category" asp-action="Save" method="post" enctype="multipart/form-data" role="form">
                        <div class="card-body">

                            @if (Model == null)
                            {
                                <input type="hidden" value="0" asp-for="CategoryId" />
                            }
                            else
                            {
                                <input type="hidden" asp-for="CategoryId" />
                            }

                            @*Category Name*@
                            <div class="form-group">
                                <label for="exampleInputEmail1">Item Name</label>
                                <input asp-for="CategoryName" type="text" class="form-control" id="exampleInputEmail1" required />
                            </div>

                            @*Image Category*@
                            <div class="form-group">
                                <label for="exampleInputFile">Choose Image</label>
                                <div class="input-group">
                                    <input asp-for="ImageName" type="file" name="Files" class="form-control" id="inputGroupFile02" required>
                                    <label class="input-group-text" for="inputGroupFile02">Upload</label>
                                </div>
                                @if (Model != null && Model.ImageName != null)
                                {
                                    <img style="border-radius: 2px; width: 15% !important; " src="@string.Format("/Uploads/{0}", Model.ImageName)" class="w-50" />
                                }
                            </div>

                            <input type="datetime" asp-for="CreationDate" hidden />

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn-lg btn-success">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

