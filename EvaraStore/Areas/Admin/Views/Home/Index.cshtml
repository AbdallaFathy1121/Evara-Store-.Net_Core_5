
@model AdminPanalModel

@section Styles {
    <style>
        .small-box {
            color: white !important;
        }
    </style>
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Home</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.lstAllItems.Count()</h3>
                        <p>Products</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a asp-controller="Items" asp-action="List" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.lstAllOrder.Count()</h3>

                        <p>Orders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a asp-controller="Order" asp-action="List" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box" style="background-color: #E2C43F;">
                    <div class="inner">
                        <h3>@Model.lstAllUsers.Count()</h3>

                        <p>User Registrations</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a asp-controller="Users" asp-action="List" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@Model.lstRejectedOrder.Count()</h3>

                        <p>Rejected Orders</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-solid fa-trash"></i>
                    </div>
                    <a asp-controller="Order" asp-action="List" asp-route-id="Rejected-Orders" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box" style="background-color: #B3A86A;">
                    <div class="inner">
                        <h3>@Model.lstPendingOrder.Count()</h3>

                        <p>Pending Orders</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-solid fa-spinner"></i>
                    </div>
                    <a asp-controller="Order" asp-action="List" asp-route-id="Pending-Orders" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box" style="background-color: #C67052;">
                    <div class="inner">
                        <h3>@Model.lstCompletedOrder.Count()</h3>

                        <p>Completed Orders</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-solid fa-check-double"></i>
                    </div>
                    <a asp-controller="Order" asp-action="List" asp-route-id="Completed-Orders" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box" style="background-color: #568D4B;">
                    <div class="inner">
                        <h3>@TempData["TotalEarning"]</h3>

                        <p>Total Earning</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-solid fa-dollar-sign"></i>
                    </div>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
    </div>
</section>
<!-- /.content -->