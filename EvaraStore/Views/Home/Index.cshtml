@section Styles {
    <style>
        .ajaxbg {
            background: rgba(255,255,255,0.8) !important;
            position: absolute !important;
            top: 0 !important;
            left: 0 !important;
            width: 100% !important;
            height: 100% !important;
            z-index: 22 !important;
            border-radius: 50px;
        }

            .ajaxbg img {
                position: absolute !important;
                top: 29% !important;
                left: 50% !important;
                width: 80px !important;
                height: 80px !important;
                transform: translateX(-50%) !important;
                z-index: 23 !important;
            }

            .ajaxbg p {
                position: absolute;
                top: 29%;
                left: 0;
                width: 100% !important;
                z-index: 23;
            }

        .alert {
            position: fixed;
            top: 0;
            left: 0;
            z-index: 9999;
        }
    </style>
}

